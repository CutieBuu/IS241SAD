@model Student
@{
    ViewData["Title"] = "Student Home";
}

<!--html, css, & js written by Jacob Sadler-->


<h1>Welcome back, @Model.FirstName.FirstCharToUpper()</h1>

<div class="desc">Select a course to check in or view attendance reports.</div>
<div class="desc" style="color:Red">@TempData["ErrorMessage"]</div>
<br>
@foreach (Course course in Model.Courses)
{
    <a asp-action="Course" asp-route-id="@course.CourseId" asp-controller="Student" asp-area="Student" class="a-main">@course.CourseName</a>
}



<vc:success-popup></vc:success-popup>